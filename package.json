{
  "name": "express-parcel-react-now",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn clean && NODE_ENV=production parcel build src/index.html --public-url=/static",
    "clean": "rimraf dist",
    "deploy": "yarn build && now rm express-parcel-react-now && now",
    "dev": "NODE_ENV=development PORT=8080 nodemon server/dev-server.js --watch=server",
    "now-build": "yarn build",
    "start": "NODE_ENV=production node server/index.js",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.14.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-xo": "^0.26.0",
    "eslint-config-xo-react": "^0.18.0",
    "eslint-plugin-react": "^7.12.4",
    "lint-staged": "^8.1.4",
    "nodemon": "^1.18.10",
    "parcel-bundler": "^1.11.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.16.4",
    "prettier-eslint": "^8.8.2",
    "rimraf": "^2.6.3",
    "xo": "^0.24.0"
  },
  "dependencies": {
    "express": "^4.17.3",
    "react": "^16.8.3",
    "react-dom": "^16.8.3"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "proseWrap": "always"
  },
  "xo": {
    "parser": "babel-eslint",
    "envs": [
      "browser",
      "node"
    ],
    "prettier": true,
    "space": true,
    "rules": {
      "camelcase": 0,
      "unicorn/filename-case": 0,
      "unicorn/no-process-exit": 0,
      "import/no-unassigned-import": 0
    },
    "extends": "xo-react",
    "plugins": [
      "react"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "git add",
      "xo"
    ]
  },
  "precommit": {
    "run": [
      "lint-staged"
    ]
  }
}
